<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <TextArea fx:id="chatArea" editable="false" prefHeight="200.0" prefWidth="200.0"/>
  <TextField fx:id="usernameField" promptText="Enter your username"/>
  <PasswordField fx:id="passwordField" promptText="Enter your password"/>
  <Button fx:id="registerButton" text="Register" onAction="#registrationButtonHandler"/>
  <Text fx:id="registrationErrorView" fill="darkred" visible="false"/>
</VBox>